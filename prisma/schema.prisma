generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @default(autoincrement()) @id
  kakaoId   String  @unique
  name      String
  email     String
  ageRange  String
  diaries   Diary[]
}

model Diary {
  id          Int        @default(autoincrement()) @id
  alcholType  String
  amount      Int
  amountType  String
  withWhom    String
  where       String
  why         String?
  food        String?
  thought     String?
  createdAt   DateTime   @default(now())
  author      User?      @relation(fields: [authorId], references: [id])
  authorId    Int?
}

